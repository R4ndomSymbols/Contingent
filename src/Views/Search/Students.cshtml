@using Contingent.Controllers.DTO.Out;

@model object;

<div class="page-layout-container">
    <div class="item-input-group d-flex flex-row">
        <div class="d-flex flex-column flex-fill">
            <h5 class="field-title">
                ФИО студента:
            </h5>
            <div class="d-flex flex-row">
                <input type="text" placeholder="ФИО студента" id="name_input" class="standard-input" />
            </div>
        </div>
        <div class="d-flex flex-column">
            <h5 class="field-title">
                Группа студента:
            </h5>
            <div class="d-flex flex-row">
                <input type="text" placeholder="Группа" id="group_input" class="standard-input" />
                <button class="standard-button-prim" id="perform_search">
                    Поиск студентов
                </button>
            </div>
        </div>
    </div>
    <div>
        <table class="table">
            <thead>
                <th>Номер в книге</th>
                <th>ФИО</th>
                <th>Группа</th>
                <th>Действия</th>
            </thead>
            <tbody id="students_found">

            </tbody>
        </table>
    </div>
    <div class="d-flex separator mt-2">
        <div class="d-flex flex-row flex-fill mt-2">
            <div class="d-flex flex-row">
                <h4 id="current_page">1</h4>
            </div>
            <div class="flex-fill">

            </div>
            <button id="previous_page" class="standard-button-sec">
                &lt-Предыдущая
            </button>
            <button id="next_page" class="standard-button-sec">
                Следующая-&gt
            </button>
        </div>
    </div>
</div>

<script src="~/js/search/student.js" type="module"></script>