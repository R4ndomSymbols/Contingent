<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Контингент</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentTracking.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.min.css" />
    <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.structure.min.css" />
    <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.theme.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="~/home/index">Контингент</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="d-flex flex-row">
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="creating"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Регистрация
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="creating">
                            <li><a class="dropdown-item" href="~/students/modify/new">Студент</a></li>
                            <li><a class="dropdown-item" href="~/groups/modify/new">Группа</a></li>
                            <li><a class="dropdown-item" href="~/specialities/modify/new">Специальность</a></li>
                            <li><a class="dropdown-item" href="~/orders/modify/new">Приказ</a></li>
                        </ul>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="moving"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Движение
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="moving">
                            <li><a class="dropdown-item" href="~/studentflow/">Движение</a></li>
                        </ul>
                    </div>
                </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">

    </footer>


</body>

</html>
